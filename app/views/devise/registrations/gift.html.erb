<div class="heading">

<h1>Say Sorry Today...</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>


<div class="container">
  <div class="accordion">

    <h3 id="accordionHeader1">1. Small Gift</h3>
    <div class="row-fluid">
      <div class="col-lg-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
                <h4 class="panel-title">Bracelet</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$35 includes shipping</li>
                    </ul>
                        <p><img src="http://g.nordstromimage.com/imagegallery/store/product/Large/16/_8580916.jpg" alt="bracelet" alt="flowers" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select', class: 'btn btn-success', role: "button" %>
                  </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h4 class="panel-title">Personalized Monogram Necklacke</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$98</li>
                    </ul>
                        <p><img src="http://g.nordstromimage.com/imagegallery/store/product/Large/6/_8424846.jpg" alt="necklace" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select2', class: 'btn btn-success', role: "button" %>
                  </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h4 class="panel-title">Michael Kor's Watch</h4>
                </div>
                    <div class="panel-body">
                      <ul>
                        <li>$225</li>
                      </ul>
                          <p><img src="http://g.nordstromimage.com/imagegallery/store/product/Large/19/_8055859.jpg"></p>

                          <%= link_to "SELECT", '#', id: 'select3', class: 'btn btn-success', role: "button" %>
                    </div>
              </div>
            </div>
          </div>

          <h3 id="accordionTwo">2. Shipping</h3>
          <div class="row-fluid">
            <div class="col-lg-12">
              <div class="panel panel-default">

                <div id="collapseTwo" class="collapse in">
                   <div class="panel-body">

                        <p><%= f.label :recipient_first_name, "First Name" %><br />
                      <%= f.text_field :recipient_first_name %></p>
                        <p><%= f.label :recipient_last_name, "Last Name" %><br />
                      <%= f.text_field :recipient_last_name %></p>
                        <p><%= f.label :address %><br />
                      <%= f.text_field :address %></p>
                        <p><%= f.label :city %><br />
                      <%= f.text_field :city %></p>
                        <p><%= f.label :state %><br />
                      <%= f.text_field :state %></p>
                        <p><%= f.label :zip_code %><br />
                      <%= f.text_field :zip_code %></p>

                      <div>
                        <%= link_to "Continue", '#', id: 'continue', class: 'btn btn-success', role: "button" %>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>


      <h3 id="accordionThree">3. Billing</h3>
        <div class="row-fluid">
          <div class="col-lg-12">
            <div class="panel panel-default">

                <div id="collapseThree" data-toggle="collapse" class="collapse in">
                   <div class="panel-body">
                <%= devise_error_messages! %>
                        <p><%= f.label :username %><br />
                        <%= f.text_field :username %></p>

                        <p><%= f.label :email %><br />
                        <%= f.email_field :email %></p>

                        <p><%= f.label :password %><br />
                        <%= f.password_field :password %></p>

                        <p><%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation %></p>

                          <div><%= f.submit "Sign up", class: "btn btn-success", role: "button" %> or <%= link_to "Sign In", new_user_session_path %></div>

                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
<% end %>
</div>
</div>




