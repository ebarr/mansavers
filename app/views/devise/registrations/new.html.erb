<div class="heading">

<h1>Get Started Today...</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>


<div class="container">
  <div class="accordion">

    <h3 id="accordionHeader1">1. Select your sorry gift</h3>
    <div class="row-fluid">
      <div class="col-lg-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
                <h4 class="panel-title">Send flowers</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$35 includes shipping</li>
                      <li>Flowers sent from a local store.</li>
                    </ul>
                        <p><img src="
                          http://s3.amazonaws.com/Supermarket/pictures/530746/il_fullxfull.383823531_ncvf.jpg" alt="cheap flowers" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select', class: 'btn btn-success', role: "button" %>
                  </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h4 class="panel-title">Sorry Jewelry</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$50</li>
                      <li>...</li>
                    </ul>
                        <p><img src="http://myfsn-ars.flowershopnetwork.com/images/flowerdatabase/RO00807lg.167.jpg" alt="medium flowers" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select2', class: 'btn btn-success', role: "button" %>
                  </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h4 class="panel-title">Sorry Cookies</h4>
                </div>
                    <div class="panel-body">
                      <ul>
                        <li>$40</li>
                        <li>The best macarons.</li>
                      </ul>
                          <p><img src="http://www.shopsucre.com/media/catalog/product/cache/1/image/310x298/9df78eab33525d08d6e5fb8d27136e95/m/a/mac_nola15_4.jpg" alt="Cookies" class="img-thumbnail"></p>

                          <%= link_to "SELECT", '#', id: 'select3', class: 'btn btn-success', role: "button" %>
                    </div>
              </div>
            </div>
          </div>

          <h3 id="accordionTwo">2. Shipping</h3>
          <div class="row-fluid">
            <div class="col-lg-12">
              <div class="panel panel-default">

                <div id="collapseTwo" class="collapse in">
                   <div class="panel-body">
                        <p><%= f.label :recipient_first_name, "First Name" %><br />
                      <%= f.text_field :recipient_first_name %></p>
                        <p><%= f.label :recipient_last_name, "Last Name" %><br />
                      <%= f.text_field :recipient_last_name %></p>
                        <p><%= f.label :address %><br />
                      <%= f.text_field :address %></p>
                        <p><%= f.label :city %><br />
                      <%= f.text_field :city %></p>
                        <p><%= f.label :state %><br />
                      <%= f.text_field :state %></p>
                        <p><%= f.label :zip_code %><br />
                      <%= f.text_field :zip_code %></p>

                      <div>
                        <%= link_to "Continue", '#', id: 'continue', class: 'btn btn-success', role: "button" %>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>


      <h3 id="accordionThree">3. Billing</h3>
        <div class="row-fluid">
          <div class="col-lg-12">
            <div class="panel panel-default">

                <div id="collapseThree" data-toggle="collapse" class="collapse in">
                   <div class="panel-body">
                <%= devise_error_messages! %>
                        <p><%= f.label :username %><br />
                        <%= f.text_field :username %></p>

                        <p><%= f.label :email %><br />
                        <%= f.email_field :email %></p>

                        <p><%= f.label :password %><br />
                        <%= f.password_field :password %></p>

                        <p><%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation %></p>

                          <div><%= f.submit "Sign up", class: "btn btn-success", role: "button" %></div>
                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
<% end %>
</div>
</div>



