<div class="heading">

<h1>Say Sorry Today...</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>


<div class="container">
  <div class="accordion">

    <h3 id="accordionHeader1">1. Select Your Sorry Gift</h3>
    <div class="row-fluid">
      <div class="col-lg-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
                <h4 class="panel-title">Regretful Flowers</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$50 includes shipping</li>
                    </ul>
                        <p><img src="http://s7d2.scene7.com/is/image/Teleflora/T403-3A?&wid=175&fmt=jpeg&qlt=90,0&op_sharpen=0&resMode=bilin&op_usm=1.0,0.5,1.0,0&iccEmbed=0&layer=1&opac=0&layer=2&opac=55&layer=5&opac=0" alt="flowers" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select', class: 'btn btn-success', role: "button" %>
                  </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h4 class="panel-title">Guilt Ridden Meal Delivery</h4>
              </div>
                  <div class="panel-body">
                    <ul>
                      <li>$50 for GoldBely</li>
                    </ul>
                        <p><img src="https://dbpdb4w5l87ir.cloudfront.net/uploads/product/main_image/2728/featured_bobbys-beef-ribs.5c8fe321ba6deba95fc7f4d6fe356cb9.jpg" alt="medium flowers" class="img-thumbnail"></p>

                        <%= link_to "SELECT", '#', id: 'select2', class: 'btn btn-success', role: "button" %>
                  </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="panel panel-primary">
                <div class="panel-heading">
                  <h4 class="panel-title">Apologetic Cookies</h4>
                </div>
                    <div class="panel-body">
                      <ul>
                        <li>$40</li>
                      </ul>
                          <p><img src="http://www.shopsucre.com/media/catalog/product/cache/1/image/310x298/9df78eab33525d08d6e5fb8d27136e95/m/a/mac_nola15_4.jpg" alt="Cookies" class="img-thumbnail"></p>

                          <%= link_to "SELECT", '#', id: 'select3', class: 'btn btn-success', role: "button" %>
                    </div>
              </div>
            </div>
          </div>

          <h3 id="accordionTwo">2. Shipping</h3>
          <div class="row-fluid">
            <div class="col-lg-12">
              <div class="panel panel-default">

                <div id="collapseTwo" class="collapse in">
                   <div class="panel-body">

                        <p><%= f.label :recipient_first_name, "First Name" %><br />
                      <%= f.text_field :recipient_first_name %></p>
                        <p><%= f.label :recipient_last_name, "Last Name" %><br />
                      <%= f.text_field :recipient_last_name %></p>
                        <p><%= f.label :address %><br />
                      <%= f.text_field :address %></p>
                        <p><%= f.label :city %><br />
                      <%= f.text_field :city %></p>
                        <p><%= f.label :state %><br />
                      <%= f.text_field :state %></p>
                        <p><%= f.label :zip_code %><br />
                      <%= f.text_field :zip_code %></p>

                      <div>
                        <%= link_to "Continue", '#', id: 'continue', class: 'btn btn-success', role: "button" %>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>


      <h3 id="accordionThree">3. Billing</h3>
        <div class="row-fluid">
          <div class="col-lg-12">
            <div class="panel panel-default">

                <div id="collapseThree" data-toggle="collapse" class="collapse in">
                   <div class="panel-body">
                <%= devise_error_messages! %>
                        <p><%= f.label :username %><br />
                        <%= f.text_field :username %></p>

                        <p><%= f.label :email %><br />
                        <%= f.email_field :email %></p>

                        <p><%= f.label :password %><br />
                        <%= f.password_field :password %></p>

                        <p><%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation %></p>

                        <div><%= f.submit "Sign up", class: "btn btn-success", role: "button" %> or <%= link_to "Sign In", new_user_session_path %></div>

                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
<% end %>
</div>
</div>

